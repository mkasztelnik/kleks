.login-box
  .login-heading
    %h3 Sign up
  .login-body
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .devise-errors
        = devise_error_messages!
      %div
        = f.text_field :first_name, class: "form-control top", placeholder: "Given name", required: true
        = f.text_field :last_name, class: "form-control middle", placeholder: "Family name", required: true
        = f.email_field :email, class: "form-control middle", placeholder: "Email", required: true
        = f.password_field :password, class: "form-control middle", placeholder: "Password", required: true
        = f.password_field :password_confirmation, class: "form-control bottom", placeholder: "Confirm password", required: true
      %div
        = f.submit "Sign up", class: "btn-create btn"
  .login-footer
    %p
      %span.light
        Have an account?
      %strong
        = link_to "Sign in", new_session_path(resource_name)
    %p
      = link_to "Forgot your password?", new_password_path(resource_name)
