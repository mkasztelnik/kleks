$('#<%= item.class.name.downcase %>s-list').
  append('<%= j render("item", item: item) %>');
$('#<%= "#{item.class.name.downcase}-#{item.id}" %>').
  effect("highlight", {}, 3000);

$('#<%= count_id %>').text('<%= count %>')
$('#<%= count_id %>').attr('class', 'badge <%= count_class %>');

<%- if local_assigns[:application_state] %>
  $('#submit').html('<%= j render("layouts/#{application_state}") %>')
<%- end %>