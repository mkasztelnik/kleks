%li.clearfix(id="publication-#{item.id}")
  .left
    = link_to_if can?(:edit, item), item.title, [:edit, item], title: item.publication_title, remote: true do
      = link_to item.title, item, remote: true
    %small.light
      in #{item.title}, #{item.publisher} (#{item.language})
  - if can?(:destroy, item)
    .pull-right
      =link_to item, remote: true,
                     method: :delete,
                     class: 'delete',
                     data: { confirm: t('publication.destroy_confirmation') } do
        = icon('times')