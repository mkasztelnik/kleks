%li.clearfix(id="training-#{item.id}")
  .left
    = link_to_if can?(:edit, item), "#{item.title},", [:edit, item], title: item.title, remote: true do
      = link_to "#{item.title},", item, remote: true
    %small.light
      #{item.institution},
      -unless item.country.blank?
        #{item.country_name},
      from #{item.start_date} to #{item.end_date}.
  - if can?(:destroy, item)
    .pull-right
      =link_to item, remote: true,
                     method: :delete,
                     class: 'delete',
                     data: { confirm: t('training.destroy_confirmation') } do
        = icon('times')