%li.clearfix(id="work-#{item.id}")
  .left
    = link_to_if can?(:edit, item),
                 item.title,
                 [:edit, item], title: item.title,
                 remote: true do
      = link_to item.title, item, remote: true
    %small.light
      = item.responsibility

  - if can?(:destroy, item)
    .pull-right
      =link_to item, remote: true,
                     class: 'delete',
                     method: :delete,
                     data: { confirm: t('work.destroy_confirmation') } do
        = icon('times')